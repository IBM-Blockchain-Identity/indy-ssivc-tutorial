{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
		"annotations": {
		  "description": "Deployment template for a server with persistent storage.",
		  "tags": "${NAME}"
		},
        "name": "${NAME}-deploy-template"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "labels": {
                    "app": "${NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "${IMAGE_NAMESPACE}",
                                "name": "${SOURCE_IMAGE_NAME}:${TAG_NAME}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${NAME}"
                        }
                    },
                    "spec": {
                        "volumes": [
                            {
                                "name": "${NAME}-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${NAME}"
                                }
                            }
                        ],
                        "containers": [
                            {
                                "name": "${NAME}",
                                "image": " ",
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "POSTGRESQL_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${NAME}",
                                                "key": "database-user"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRESQL_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${NAME}",
                                                "key": "database-password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRESQL_DATABASE",
                                        "value": "${POSTGRESQL_DATABASE_NAME}"
                                    },


                                    {
                                        "name": "FDW_NAME",
                                        "value": "${FDW_NAME}"
                                    },
                                    {
                                        "name": "FDW_FOREIGN_SCHEMA",
                                        "value": "${FDW_FOREIGN_SCHEMA}"
                                    },
                                    {
                                        "name": "FDW_FOREIGN_SERVER",
                                        "value": "${FDW_FOREIGN_SERVER}"
                                    },
                                    {
                                        "name": "FDW_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${NAME}",
                                                "key": "fdw-user"
                                            }
                                        }
                                    },
                                    {
                                        "name": "FDW_PASS",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${NAME}",
                                                "key": "fdw-password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "FDW_SCHEMA",
                                        "value": "${FDW_SCHEMA}"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "${NAME}-data",
                                        "mountPath": "/var/lib/pgsql/data"
                                    }
                                ],
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 5432
                                    },
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "psql -h 127.0.0.1 -U $POSTGRESQL_USER -q -d $POSTGRESQL_DATABASE -c 'SELECT 1'"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "IfNotPresent",
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${PERSISTENT_VOLUME_SIZE}"
                    }
                }
            }
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "labels": {
                    "app": "${NAME}"
                }
            },
            "data": {
                "database-password": "${POSTGRESQL_PASSWORD}",
                "database-user": "${POSTGRESQL_USER}",
                "fdw-password": "${FDW_PASS}",
                "fdw-user": "${FDW_USER}"
            },
            "type": "Opaque"
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "5432-tcp",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432
                    }
                ],
                "selector": {
                    "name": "${NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }
    ],
	"parameters": [
		{
		  "name": "NAME",
		  "displayName": "Name",
		  "description": "The name assigned to all of the OpenShift resources associated to the PostgreSQL instance.",
		  "required": true,
		  "value": "postgresql-oracle-fdw"
		},
		{
		  "name": "MEMORY_LIMIT",
		  "displayName": "Memory Limit",
		  "description": "Maximum amount of memory the container can use.",
		  "required": true,
		  "value": "512Mi"
		},
		{
		  "name": "PERSISTENT_VOLUME_SIZE",
		  "displayName": "Persistent Volume Size",
		  "description": "The size of the persistent volume , e.g. 512Mi, 1Gi, 2Gi.",
		  "required": true,
		  "value": "1Gi"
		},
		{
		  "name": "POSTGRESQL_DATABASE_NAME",
		  "displayName": "PostgreSQL Database Name",
		  "description": "The name of the PostgreSQL database.",
		  "required": true,
		  "generate": "expression",
		  "from": "[a-zA-Z_][a-zA-Z0-9_]{10}"
		},	
		{
		  "name": "POSTGRESQL_USER",
		  "displayName": "PostgreSQL Connection Username",
		  "description": "Username for PostgreSQL user that will be used for accessing the database.  Needs to be basee64 encoded/",
		  "required": true,
		  "generate": "expression",
		  "from": "[a-zA-Z_][a-zA-Z0-9_]{10}"
		},
		{
		  "name": "POSTGRESQL_PASSWORD",
		  "displayName": "PostgreSQL Connection Password",
		  "description": "Password for the PostgreSQL connection user.  Needs to be basee64 encoded/",
		  "required": true,
		  "generate": "expression",
		  "from": "[a-zA-Z0-9_~!@#$%^&*()-=<>,.?;:|]{16}"
        },
		{
            "name": "FDW_NAME",
            "displayName": "Foreign Data Wrapper Name",
            "description": "The name of the foreign data wrapper.",
            "required": true,
            "value": "bc_registries_wrapper"
        },	
		{
            "name": "FDW_FOREIGN_SCHEMA",
            "displayName": "Foreign Data Schema",
            "description": "Oracle schema from which to get the data.",
            "required": true,
            "value": "colin_mgr_uat"
        },
		{
            "name": "FDW_FOREIGN_SERVER",
            "displayName": "Foreign Data Server",
            "description": "The Oracle server reference.",
            "required": true,
            "value": "142.34.88.17:1521"
        },
        {
            "name": "FDW_USER",
            "displayName": "Foreign Data Username",
            "description": "Oracle username",
            "required": true,
            "generate": "expression",
            "from": "[a-zA-Z_][a-zA-Z0-9_]{10}"
        },
        {
            "name": "FDW_PASS",
            "displayName": "Foreign Data Password",
            "description": "Oracle password.",
            "required": true,
            "generate": "expression",
            "from": "[a-zA-Z0-9_~!@#$%^&*()-=<>,.?;:|]{16}"
        },
		{
            "name": "FDW_SCHEMA",
            "displayName": "PostgreSql Data Schema",
            "description": "Postgres schema to send data to.",
            "required": true,
            "value": "bc_registries"
        },
        {
            "name": "IMAGE_NAMESPACE",
            "displayName": "Image Namespace",
            "required": true,
            "description": "The namespace of the OpenShift project containing the imagestream for the application.",
            "value": "devex-von-tools"
        },
        {
            "name": "SOURCE_IMAGE_NAME",
            "displayName": "Source Image Name",
            "description": "The name of the image to use for this resource.",
            "required": true,
            "value": "postgresql-oracle-fdw"
        },
        {
            "name": "TAG_NAME",
            "displayName": "Environment TAG name",
            "description": "The TAG name for this environment, e.g., dev, test, prod",
            "required": true,
            "value": "dev"
        }        
	]	
}
